          "value": "{theme.primary.tone}",
          "type": "color"
        },
        "text-color": {
          "value": "{theme.content.inverse-primary}",
          "type": "color"
        },
        "separator-color": {
          "value": "{theme.border.inverse-light}",
          "type": "color"
        }
      },
      "white": {
        "bg-color": {
          "value": "{theme.bg.primary}",
          "type": "color"
        },
        "text-color": {
