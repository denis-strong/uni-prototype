        }
      }
    },
    "footer": {
      "color": {
        "value": "{theme.bg.inverse-primary}",
        "type": "color"
      },
      "text-color": {
        "value": "{theme.content.inverse-secondary}",
        "type": "color"
      },
      "title-color": {
        "value": "{theme.content.inverse-primary}",
        "type": "color"
      },
      "caption-color": {
        "value": "{theme.content.inverse-tertiary}",
        "type": "color"
      },
      "separator-color": {
