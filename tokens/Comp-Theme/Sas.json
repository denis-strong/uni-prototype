{
  "button": {
    "label": {
      "x-large": {
        "value": {
          "fontFamily": "{font-family.secondary}",
          "fontWeight": "{font-weight.medium}",
          "lineHeight": "{line-height.title.x-small}",
          "fontSize": "{font-size.18}",
          "letterSpacing": "1",
          "paragraphSpacing": "{paragraph-spacing.none}",
          "textDecoration": "{text-decoration.none}",
          "textCase": "{text-case.upper}"
        },
        "type": "typography"
      },
      "large": {
        "value": {
          "fontFamily": "{font-family.secondary}",
          "fontWeight": "{font-weight.medium}",
          "lineHeight": "{line-height.label.large}",
          "fontSize": "{font-size.18}",
          "letterSpacing": "1",
          "paragraphSpacing": "{paragraph-spacing.none}",
          "textDecoration": "{text-decoration.none}",
          "textCase": "{text-case.upper}"
        },
        "type": "typography"
      },
      "medium": {
        "value": {
          "fontFamily": "{font-family.secondary}",
          "fontWeight": "{font-weight.medium}",
          "lineHeight": "{line-height.label.medium}",
          "fontSize": "{font-size.16}",
          "letterSpacing": "0.5",
          "paragraphSpacing": "{paragraph-spacing.none}",
          "textDecoration": "{text-decoration.none}",
          "textCase": "{text-case.upper}"
        },
        "type": "typography"
      },
      "small": {
        "value": {
          "fontFamily": "{font-family.secondary}",
          "fontWeight": "{font-weight.regular}",
          "lineHeight": "100%",
          "fontSize": "{font-size.16}",
          "letterSpacing": "0.5",
          "paragraphSpacing": "{paragraph-spacing.none}",
          "textDecoration": "{text-decoration.none}",
          "textCase": "{text-case.upper}"
        },
        "type": "typography"
      }
    },
    "primary": {
      "default": {
        "bg-color": {
          "value": "linear-gradient(180deg, {theme.primary.default} 0%, {theme.primary.tone} 100%)",
          "type": "color"
        },
        "text-color": {
          "value": "{theme.content.primary}",
          "type": "color"
        }
      },
      "loading": {
        "bg-color": {
          "value": "{theme.primary.default}",
          "type": "color"
        },
        "border-color": {
          "value": "{theme.primary.default}",
          "type": "color"
        },
        "text-color": {
          "value": "{theme.content.primary}",
          "type": "color"
        }
      },
      "hover": {
        "bg-color": {
          "value": "{theme.primary.default}",
          "type": "color"
        },
        "text-color": {
          "value": "{theme.content.primary}",
          "type": "color"
        }
      },
      "active": {
        "text-color": {
          "value": "{theme.content.primary}",
          "type": "color"
        }
      }
    },
    "outlined": {
      "default": {
        "border-color": {
          "value": "{theme.primary.dark}",
          "type": "color"
        },
        "text-color": {
          "value": "{theme.primary.dark}",
          "type": "color"
        }
      },
      "hover": {
        "text-color": {
          "value": "{theme.content.primary}",
          "type": "color"
        }
      },
      "active": {
        "text-color": {
          "value": "{theme.content.primary}",
          "type": "color"
        }
      },
      "loading": {
        "text-color": {
          "value": "{theme.content.primary}",
          "type": "color"
        }
      }
    }
  }
}